<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <h1>
            Technologies
            <!--<small>advanced tables</small>-->
          </h1>
          <div class="row" style="margin-top:1em">
            <div class="col-xs-4">

            </div>
            <div class="col-xs-4">

            </div>
            <div class="col-xs-4 text-right">
              <a href="technologies/new" class="btn btn-primary"><i class="fa fa-plus-square"></i> Add Technology</a>
            </div>
          </div>
          <ol class="breadcrumb">
            <li class="active">Technologies</li>
          </ol>
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <!--<h3 class="box-title">Data Table With Full Features</h3>-->
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Link</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @technologies.each do |technology| %>
                      <tr>
                      	<td><%= technology.name %></td>
                      	<td><%= technology.link %></td>
                        <td><%= link_to "Edit", edit_technology_path(technology.id) %> - <%= link_to "Eliminar", technology, method: :delete %></td>
                      </tr>
                  	  <%end%>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Name</th>
                        <th>Link</th>
                        <th>Actions</th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->