<!DOCTYPE html>
<html>
  <head>
  	<title>Blog</title>
  	
    <%= stylesheet_link_tag "bootstrap.min" %>
  	<%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" %>
  	<%= stylesheet_link_tag "http://code.ionicframework.com/ionicons/2.0.0/css/ionicons.min.css" %>
    <%= stylesheet_link_tag "plugins/dataTables.bootstrap.css" %>
    <%= stylesheet_link_tag "AdminLTE.min.css" %>
    <%= stylesheet_link_tag "all-skins.min.css" %>
    <%= stylesheet_link_tag "http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" %>
  </head>
  <body class="skin-blue">
  	<div class="wrapper">
        <%= render :partial => "layouts/nav_top" %>  
        <!-- Left side column. contains the logo and sidebar -->
        <%= render :partial => "layouts/nav_left" %> 
        
        <%= yield %>
        
        
        <%= render :partial => "layouts/footer" %> 
    </div><!-- ./wrapper -->
    <!-- SCRPTS -->
    <%= javascript_include_tag "plugins/jQuery-2.1.3.min" %>
    <%= javascript_include_tag "bootstrap.min" %>
    <%= javascript_include_tag "plugins/jquery.dataTables" %>
    <%= javascript_include_tag "plugins/dataTables.bootstrap" %>
    <%= javascript_include_tag "plugins/jquery.slimscroll.min" %>
    <%= javascript_include_tag "plugins/fastclick.min" %>
    <%= javascript_include_tag "app.min" %>
    <script type="text/javascript">
      $(function () {
        $("#example1").dataTable();
        $('#example2').dataTable({
          "bPaginate": true,
          "bLengthChange": false,
          "bFilter": false,
          "bSort": true,
          "bInfo": true,
          "bAutoWidth": false
        });
      });
    </script>
    <%= javascript_include_tag "http://code.jquery.com/ui/1.10.4/jquery-ui.min.js" %>
  </body>
</html>
